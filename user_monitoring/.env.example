# Database Configuration (Required)
DATABASE_URL=postgresql://user:password@localhost:5432/hyperliquid

# Target Markets and Thresholds
TARGET_MARKETS=BTC,ETH,LINK
MIN_POSITION_SIZE_USD=10000
MIN_POSITION_VALUE_USD=1.0

# Hyperliquid Node Configuration
RMP_BASE_PATH=~/hl/data/periodic_abci_states
NODE_BINARY_PATH=~/hl-node
SNAPSHOTS_DIR=~/hl/data/periodic_abci_states

# Processing Intervals (seconds)
SNAPSHOT_CHECK_INTERVAL=60
POSITION_REFRESH_INTERVAL=10
POSITION_REFRESH_BATCH_SIZE=50

# API Configuration
NVN_API_URL=http://127.0.0.1:3001/info
PUBLIC_API_URL=https://api.hyperliquid.xyz/info
API_TIMEOUT=10

# Worker and Performance Settings
MAX_WORKERS=10
MAX_RETRIES=3
RETRY_DELAY=1.0

# Data Management
DATA_DIR=./data
SNAPSHOT_RETENTION_COUNT=2

# Chain Configuration
CHAIN_TYPE=Mainnet

# Environment
ENV=production
